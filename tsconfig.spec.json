{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "types": [
      "@types/jest",
      "jest",
      "node"
    ]
  },
  "files": [
    "./src/polyfills.ts"
  ],
  "include": [
    "../src/**/*.spec.ts",
    "../src/**/*.spec.stub.ts",
    "../src/**/*.d.ts"
  ]
}
